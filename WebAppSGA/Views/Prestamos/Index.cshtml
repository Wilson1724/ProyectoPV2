@using ModeloProyecto.Entidades

@model IEnumerable<Prestamo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p>A continuación se presenta la lista de prestamos del  Sistema de Prestamos a Microempresarios</p>

<div class=" = " container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Prestamos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
               asp-controller="Prestamos" asp-action="Create">

                Crear nuevo prestamo
            </a>
        </div>
    </div>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>PrestamoId </td>
                    <td>Cantidad</td>
                    <td>Plazo</td>
                    <td>Interes</td>
                    <td>CuotaMensual</td>
                    <td>Estado</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Prestamo prestamo in Model)
                {
                <tr>
                    <td>@prestamo.PrestamoId </td>
                    <td>@prestamo.Cantidad</td>
                    <td>@prestamo.Plazo</td>
                    <td>@prestamo.Interes</td>
                    <td>@prestamo.CuotaMensual</td>
                    <td>@prestamo.Estado</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Garantes" asp-action="Edit" asp-route-id="@prestamo.PrestamoId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="Garantes" asp-action="Delete" asp-route-id="@prestamo.PrestamoId">

                            Borrar
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <div>

    </div>
</div>

