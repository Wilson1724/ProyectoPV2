@using ModeloProyecto.Entidades
@model Prestamo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creación del prestamo </h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Actualizar el Prestamo @Model.PrestamoId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input asp-for="PrestamoId" hidden />

                <div class="form-group">
                    <label>Cantidad: </label>
                    <input asp-for="Cantidad" />
                </div>
                <div class="form-group">
                    <label>Plazo: </label>
                    <input asp-for="Plazo" />
                </div>
                <div class="form-group">
                    <label>Interes: </label>
                    <input asp-for="Interes" />
                </div>
                <div class="form-group">
                    <label>CuotaMensual: </label>
                    <input asp-for="CuotaMensual" />
                </div>
                <div class="form-group">
                    <label>Estado: </label>
                    <select class="form-control"
                            asp-for="Estado" asp-items="Html.GetEnumSelectList<PrestamoEstado>()">
                    </select>
                </div>


                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar prestamo" />
                </div>
            </form>

        </div>
    </div>
</div>


