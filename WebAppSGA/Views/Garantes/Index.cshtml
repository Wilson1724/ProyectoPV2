@using ModeloProyecto.Entidades

@model IEnumerable<Garante>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p>A continuación se presenta la lista de garantes del  Sistema de Prestamos a Microempresarios</p>

<div class=" = " container">
    <div class="row">
         <div class="col-sm-6">
             <h3>Garantes</h3>
         </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
               asp-controller="Garantes" asp-action="Create">
                
                Crear nuevo garante
            </a>
        </div>
    </div>

    @if (TempData ["mensaje"] != null)
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">
                &times;
            </span>
        </button>
    </div>
    }

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id </td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Cedula</td>
                    <td>Edad</td>
                    <td>Dirección</td>
                    <td>IngresosAnuales</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Garante garante in Model)
                {
                    <tr>
                        <td>@garante.GaranteId </td>
                        <td>@garante.NombreG</td>
                        <td>@garante.ApellidoG</td>
                        <td>@garante.CedulaG</td>
                        <td>@garante.EdadG</td>
                        <td>@garante.DireccionG</td>
                        <td>@garante.IngresosAnualesG</td>
                        <td>
                            <a class="btn btn-warning"
                               asp-controller="Garantes" asp-action="Edit" asp-route-id="@garante.GaranteId">
                                Editar
                            </a>
                            <a class="btn btn-danger"
                                asp-controller="Garantes" asp-action="Delete" asp-route-id="@garante.GaranteId">
                               
                                Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>

    </div>
</div>
